            },
            "ProductAvailableQuantity":{
              "type":"integer"
            },
            "ProductCategoryID":{
              "type":"UUID"
            },
            "ProductActive":{
              "type":"boolean"
            }
          }
      },

      "category":{
        "type":"object",
        "properties":{

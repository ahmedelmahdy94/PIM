{
  "openapi":"3.0.0",
  "info":{
    "description":"curl function for product & category",
    "version":"1.0.0",
    "title":"Dozzanz task"
  },
  "tags":[
    {
      "name":"Product",
      "description":"Operations about your Product"
    },
    {
      "name":"Category",
      "description":"Operations about your Category"
    }
  ],
  "paths":{
    "/Products/":{
      "post":{
        "tags":[
          "product"
        ],
        "summary":"Create new product",
        "operationId":"addProduct",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "$ref":"#/components/schemas/product"
              }
            }
          },
          "description":"all data the product need to create record in database",
          "required":true
        },
        "responses":{
          "200":{
            "description":"successful operation",
            "content":{
              "application/json":{
                "schema":{
                  "$ref":"#/components/schemas/product"
                }
              }
            }
          },
          "400":{
            "description":"Invalid Request!"
          }
        }
      }
    },
    "/Products/{prod_id}":{
      "get":{
        "tags":[
          "product"
        ],
        "summary":"Get one Product with specified ID",
        "operationId":"GetOneProduct",
        "parameters":[
          {
            "name":"prod_id",
            "in":"path",
            "required":true,
            "schema":{
              "type": "string"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"successful operation",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "items":{
                    "$ref":"#/components/schemas/product"
                  }
                }
              }
            }
          },
          "404":{
            "description":"Invalid Request!"
          }
        }
      },
      "put":{
        "tags":[
          "product"
        ],
        "summary":"Update an existing product",
        "operationId":"updateProduct",
        "parameters":[
          {
            "in":"path",
            "name":"prod_id",
            "description":"the id of the product ",
            "required":true,
            "schema":{
              "type": "string"
            }
          }
        ],
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "$ref":"#/components/schemas/product"
              }
            }
          },
          "description":"all data ",
          "required":true
        },
        "responses":{
          "202":{
            "description":"successful operation",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "items":{
                    "$ref":"#/components/schemas/product"
                  }
                }
              }
            }
          },
          "400":{
            "description":"Invalid ID supplied"
          },
          "404":{
            "description":"product not found"
          }
        }
      },
      "delete":{
            "tags":[
              "product"
            ],
            "summary":"delete an exist product",
            "operationId":"deleteProductByID",
            "parameters":[
              {
                "name":"prod_id",
                "in":"path",
                "required":true,
                "schema":{
                  "type": "string"
                }
              }
            ],
            "responses":{
              "200":{
                "description":"Product successfuly suspend"
              },
              "404":{
                "description":"Not found."
              }
          }
        }
    },
    "/Products/GetAll/page/{page_num}":{
      "get":{
        "tags":[
          "product"
        ],
        "summary":"Get all Products",
